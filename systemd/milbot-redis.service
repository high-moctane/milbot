[Unit]
Description=milbot redis server daemon
Documentation=https://github.com/high-moctane/milbot
Before=milbot.service
Requires=docker.service
After=docker.service

[Service]
ExecStart=/usr/bin/docker start milbot-redis
ExecStop=/usr/bin/docker stop milbot-redis
Restart=always

[Install]
RequiredBy=milbot.service